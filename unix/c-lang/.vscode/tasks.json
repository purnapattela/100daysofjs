{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build active C file",
      "type": "shell",
      "command": "C:\\cygwin64\\bin\\gcc.exe",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compile current C file using Cygwin GCC"
    }
  ]
}
